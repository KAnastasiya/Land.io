section.container-fluid.page.contract-background.sign-up
  div.container
    h3.text-center Sign up to receive free updates as soon as they hit!
    form.sign-up-form
      div.row
        div.col-sm-6.col-lg-3
          div.form-group
            div.input-group
              div.input-group-addon
                object(type='image/svg+xml', data='img/user.svg')
              input(id='name', type='text', placeholder='Your name').form-control.input-lg
              label(for='name').label Your name

        div.col-sm-6.col-lg-3
          div.form-group
            div.input-group
              div.input-group-addon
                object(type='image/svg+xml', data='img/send.svg')
              input(id='email', type='email', placeholder='Email address').form-control.input-lg
              label(for='email').label Email address

        div.col-sm-6.col-lg-3
          div.form-group
            div.input-group
              div.input-group-addon
                object(type='image/svg+xml', data='img/lock.svg')
              input(id='password', type='password', placeholder='Enter a password').form-control.input-lg
              label(for='password').label Enter a password

        div.col-sm-6.col-lg-3
          div.form-group
            button(type='submit').btn.btn-primary.btn-lg.active.text-uppercase.col-xs-12.col-sm-6.col-lg-3.btn-sign Sign up for free!

      div.checkbox
        input(id='agree', type='checkbox', checked = 'checked')
